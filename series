/*0,0,2,1,4,2,6,3,8,4,10,5,12,6,14......
the odd position contains multiple of 2 and the even places contain whole numbers*/

#include <stdio.h>
int main()
{
    int n;
    printf("enter position");
    scanf("%d",&n);
    if(n%2==1)
    {
        int term=(n+1)/2;
        int res=2*(term-1);
        printf("the number present at given postion is %d",res);
    }
    else
    {
        int term=n/2;
        int res=term-1;
        printf("%d",res);        
    }
    return 0;
}
/*output
enter position3
the number present at given postion is2*/

